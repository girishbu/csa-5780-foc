#include <stdio.h>
#include <math.h>

int main() {
    double x, sinx = 0.0;
    int i, j, fact;

    printf("Enter the angle in degrees: ");
    scanf("%lf", &x);

    
    x = x * (M_PI / 180);

   
    for (i = 1, j = 1, fact = 1; i <= 7; i += 2, j++, fact *= i * (i - 1)) {
        if (j % 2 == 1) {
            sinx += pow(x, i) / fact;
        } else {
            sinx -= pow(x, i) / fact;
        }
    }

    printf("The sine of %.2lf is %.4lf.", x, sinx);

    return 0;
}
